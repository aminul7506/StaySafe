<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardElevation="@dimen/activity_vertical_margin"
    app:cardBackgroundColor="@color/cast_intro_overlay_button_background_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Name"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:text="Location" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:text="Distance" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance"
            android:text="Time" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            style="@android:style/TextAppearance.Material.Small"
            android:textColor="@android:color/black"
            android:elevation="5dp"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:id="@+id/message"
            android:background="@drawable/ic_email_black_24dp"
            android:onClick="onClickPhone"
             />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:textAppearanceSmall"
            android:textColor="@android:color/black"
            android:layout_below="@+id/time"
            android:layout_toRightOf="@+id/message"
            android:elevation="5dp"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:id="@+id/phone"
            android:background="@drawable/ic_call_black_24dp"
            android:layout_gravity="right"
            android:onClick="onClickPhone"
             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:textAppearanceSmall"
            android:textColor="@android:color/black"
            android:layout_below="@+id/time"
            android:layout_toRightOf="@+id/phone"
            android:elevation="5dp"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:id="@+id/emergency"
            android:layout_gravity="right"
            android:onClick="onClickPhone"
            android:background="@drawable/ic_warning_black_24dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>